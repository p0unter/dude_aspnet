@model List<Product>

@foreach (var item in Model)
{
	<div class="card col-12 col-md-4 col-lg-3 p-0">
		<div class="position-relative overflow-hidden" style="height: 220px;">
			<img src="@item.ImgUrl" class="card-img-top position-absolute" style="left: 50%; top: 50%; transform: translate(-50%, -50%);">
		</div>
		<div class="card-body">
			<h3 class="card-title">@item.Title</h3>
			<h5>@item.Subheading</h5>
			<a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">
				View Article
			</a>
		</div>
	</div>
}

