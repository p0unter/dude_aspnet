@model AppRole

<h2>Edit User</h2>
<hr/>

<form action="Edit" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
    </div>

    <table class="table table-sm table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th style="width: 80px;"></th>
        </tr>
        </thead>
        <tbody>
            @if (ViewBag.Users.Count == 0)
            {
                <tr>
                    <td colspan="4" class="text-center text-warning">Role not found.</td>
                </tr>
            }
            @if (ViewBag.Users != null)
            {
                @foreach (var role in ViewBag.Users)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.FullName</td>
                        <td>@role.Email</td>
                        <td>
                            <form method="post">
                                <a class="btn btn-primary btn-sm" asp-controller="Users" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    
    

    <button type="submit" class="btn btn-primary">Save</button>
</form>