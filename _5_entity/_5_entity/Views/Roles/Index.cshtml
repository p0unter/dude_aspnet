@model IEnumerable<AppRole>

<a class="btn btn-sm btn-primary" asp-action="Create">Create Role</a>
<hr/>

<table class="table table-sm table-bordered">
    <tr>
        <th style="width: 120px">Id</th>
        <th style="width: 120px">Role Name</th>
        <th>Users</th>
        <th style="width: 120px"></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center text-warning">Role not found.</td>
        </tr>
    }
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td asp-role-users="@role.Id">User List</td>
            <td>
                <form method="post">
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>